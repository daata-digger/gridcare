          {
            "expr": "iso_status{iso=\"ISONE\"}",
            "legendFormat": "ISONE",
            "refId": "B"
          },
          {
            "expr": "iso_status{iso=\"NYISO\"}",
            "legendFormat": "NYISO",
            "refId": "C"
          },
          {
            "expr": "iso_status{iso=\"MISO\"}",
            "legendFormat": "MISO",
            "refId": "D"
          },
          {
            "expr": "iso_status{iso=\"SPP\"}",
            "legendFormat": "SPP",
            "refId": "E"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "Status (1=Online)"},
          {"format": "short"}
        ]
      }
    ],
    "refresh": "30s",
    "time": {"from": "now-1h", "to": "now"},
    "timepicker": {
      "refresh_intervals": ["10s", "30s", "1m", "5m", "15m", "30m", "1h"]
    }
