{
  "dashboard": {
    "title": "GridCARE Live - Energy Grid Monitoring",
    "tags": ["gridcare", "energy", "grid"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
        "type": "graph",
        "title": "Total Grid Load (MW)",
        "targets": [
          {
            "expr": "grid_total_load_mw",
            "legendFormat": "Total Load",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "Megawatts (MW)"},
          {"format": "short"}
        ]
      },
      {
        "id": 2,
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
        "type": "graph",
        "title": "Renewable Energy Generation (MW)",
        "targets": [
          {
            "expr": "grid_renewable_generation_mw",
            "legendFormat": "Renewables",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "Megawatts (MW)"},
          {"format": "short"}
        ]
      },
      {
        "id": 3,
